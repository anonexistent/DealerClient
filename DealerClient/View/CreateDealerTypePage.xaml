<Page x:Class="DealerClient.View.CreateDealerTypePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealerClient.View"
        mc:Ignorable="d"
        Title="CreateDealerTypePage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Text="Создание нового type" TextAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>

        <Button Grid.Row="1" Content="&lt;" FontSize="26" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Padding="10 5" Click="Button_Click"/>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="name:" FontSize="26"/>
            <TextBox x:Name="tbName" FontSize="20"/>
            <Button x:Name="btnCreateDealer" Content="create" FontSize="34" Margin="20" Background="LightGreen" Click="btnCreateDealer_Click"/>
        </StackPanel>
    </Grid>

</Page>
