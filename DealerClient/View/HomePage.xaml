<Page x:Class="DealerClient.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DealerClient.View"
      xmlns:c="clr-namespace:DealerClient.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1200"
      Title="HomePage">

    <Page.DataContext>
        <c:MainViewModel/>
    </Page.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Button Content="dealers" HorizontalAlignment="Center" Padding="10 5" Margin="10" FontSize="20" FontWeight="Bold" Click="Button_Click"/>
            <Button Content="delaer types" HorizontalAlignment="Center" Padding="10 5" Margin="10" FontSize="20" FontWeight="Bold" Click="Button_Click_1"/>
        </StackPanel>

        <Frame x:Name="homeFrame" Grid.Column="1" Margin="10" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
