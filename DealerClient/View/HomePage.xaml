<Page x:Class="DealerClient.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DealerClient.View"
      xmlns:c="clr-namespace:DealerClient.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="HomePage">

    <Page.DataContext>
        <c:MainViewModel/>
    </Page.DataContext>
    
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Command="{Binding GoToDealerPageCommand}" Content="visit dealers" HorizontalAlignment="Center" Padding="10 5" Margin="10" FontSize="20" FontWeight="Bold"/>
            <Button Command="{Binding GoToDealerTypePageCommand}" Content="visit delaer types" HorizontalAlignment="Center" Padding="10 5" Margin="10" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
